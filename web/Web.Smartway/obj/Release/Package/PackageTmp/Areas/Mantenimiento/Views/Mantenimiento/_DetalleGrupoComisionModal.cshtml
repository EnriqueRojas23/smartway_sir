@model Web.Coolbox.Areas.Comercial.Models.ListaGrupoComisionModel
@section scripts
{
   <script src="@Url.Content("~/Scripts/app/Comercial/comercial.grupocomision.js")" type="text/javascript"></script>
} 
<form role="form" method="post" class="form-horizontal">
    <div class="modal-header">
        <h4 class="modal-title">Detalle Grupo de Comisión</h4>
    </div>
    <div class="modal-body">
        <div class="form-group">
            <div class="col-md-12">
                <div class="panel panel-primary">
                    <div class="panel-heading">
                        <i class="fa fa-info-circle"></i>  Datos Generales
                    </div>
                    <div class="panel-body">
                        <div class="form-group">
                            <label class="control-label col-md-2">Nombre</label>
                            <div class="col-md-4">@Html.TextBoxFor(m => m.nombre,"", new { @class = "form-control input-sm", @disabled = "true" })</div>
                            <label class="control-label col-md-2">% Comisión:</label>
                            <div class="col-md-4">@Html.TextBoxFor(m => m.comision,"", new { @class = "form-control input-sm", @disabled = "true" })</div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-2">Descripcion:</label>
                            <div class="col-md-10">@Html.TextAreaFor(m => m.descripcion,2,1, new { @class = "form-control", @disabled = "true" })</div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-12">
                <div class="panel panel-primary">
                    <div class="panel-heading">
                        <i class="fa fa-list-alt"></i> Detalle de Grupo
                    </div>
                    <div class="panel-body">
                        <div class="col-md-12 no-padding dataTables_wrapper">
                            <table id="tblDetalleGComision" class="table table-striped table-bordered table-hover dataTables-tblDetalleGComision" width="100%" data-url="@Url.Action("JsonGetListarDetalleGComision", "Comercial")">
                                <tfoot>
                                    <tr>
                                        <th>Id</th>
                                        <th>Código Item</th>
                                        <th>Descripción Item</th>
                                    </tr>
                                </tfoot>
                            </table>

                            <button id="btnExportarDetalleExcel" type="button" class="btn btn-outline btn-primary btn-sm" data-url=@Url.Action("ExportDetalleGrupoComision", "Comercial") data-toggle="tooltip" data-placement="center" title="Exportar a Excel"><i class="fa fa-file-excel-o"></i> Exportar a Excel</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <div class="col-md-12 text-right">
             <button type="button" class="btn btn-sm  btn-outline btn-danger" data-dismiss="modal"><i class="fa fa-times-circle-o"></i>  Salir</button>
        </div>
    </div>
</form>