  @model Web.Coolbox.Areas.Mantenimiento.Models.ValorTablaModel

@section Styles {
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/plugins/jqGrid/ui.jqgrid.css")" />
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/jqgrid.extension.css")" />

}
@using (Ajax.BeginForm("AgregarValorTablaModal", "Mantenimiento", null, new AjaxOptions { HttpMethod = "POST", InsertionMode = InsertionMode.Replace, UpdateTargetId = "modalcontent", OnComplete = "OnCompleteTransaction(xhr, status)" }, new { @class = "form-horizontal" }))
{
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <i class="fa fa-users fa-4x"></i>
        <h4 class="modal-title">Agregar Código </h4>
        <small class="font-bold">Digitar los datos necesarios para el registro.</small>
    </div>
    <div class="modal-body">
        <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        <label class="control-label col-md-4">Tabla :</label>
                        @Html.HiddenFor(m => m.idvalortabla);
                        <div class="col-md-6 focus"> @Html.DropDownListFor(m => m.idmaestrotabla, (SelectList)ViewData["ListaMaestroTabla"], "--Seleccionar--", new { @class = "form-control input-sm", @required = "true", @id = "ddlMaestroTabla", @tabindex = 1, @autofocus = "autofocus" })</div>

                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-4">Valor :</label>
                        <div class="col-md-6">@Html.TextBoxFor(model => model.valor, "", new { @class = "form-control input-sm", @placeholder = "Valor General", @required = "False" , @tabindex = 2 })</div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-4">Orden :</label>
                        <div class="col-md-6">@Html.TextBoxFor(model => model.orden, "", new { @type = "number", @class = "form-control input-sm", @placeholder = "Orden", @required = "False", @tabindex = 3 })</div>
                    </div>
                   
                
                    <div class="form-group">
                        <button type="submit" class="btn  btn-outline btn-primary btn-sm"><i class="fa fa-check-circle-o"></i> Guardar</button>
                        <button type="button" class="btn  btn-outline btn-danger btn-sm" data-dismiss="modal"><i class="fa fa-times-circle-o"></i>  Cancelar</button>

                    </div>
                </div>
           
        </div>
    </div>
    <div class="modal-footer"></div>
}