@model Web.Coolbox.Areas.Seguridad.Models.Paginas.ListarPaginasModel

@{
    ViewBag.Title = "Mantenimiento de Páginas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles{

    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/plugins/jqGrid/ui.jqgrid.css")" />
    <link rel="stylesheet" type="text/css" media="screen" href="@Url.Content("~/Content/plugins/awesome-bootstrap-checkbox/awesome-bootstrap-checkbox.css")" />
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/jqgrid.extension.css")" />
    <link rel="stylesheet" type="text/css" media="screen" href="@Url.Content("~/Content/plugins/awesome-bootstrap-checkbox/awesome-bootstrap-checkbox.css")" />
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/plugins/chosen/chosen.css")" />
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/plugins/sweetalert/sweetalert.css")" />
    <link href="~/Content/plugins/iCheck/custom.css" rel="stylesheet" />
}
@section scripts {
    <script src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/plugins/jqGrid/jquery.jqGrid.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/plugins/jqGrid/i18n/grid.locale-es.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/plugins/chosen/chosen.jquery.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/plugins/sweetalert/sweetalert.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/plugins/touchspin/jquery.bootstrap-touchspin.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/app/seguridad/seguridad.usuarios.listarpaginas.js")" type="text/javascript"></script>
    <script src="~/Scripts/plugins/iCheck/icheck.min.js"></script>
}

<button id="templatetrash" style="display:none" title="Eliminar Usuario" data-url="@Url.Action("EliminarPagina", "Paginas", new { area = "seguridad" })" class="btn btn-danger btn-xs  btn-outline"><i class="fa fa-trash"></i></button>
<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-5">
        <h2>@ViewBag.Title</h2>
        <ol class="breadcrumb">
            <li>
                Seguridad
            </li>
            <li class="active">
                <strong>@ViewBag.Title</strong>
            </li>
        </ol>
    </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-md-10">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5><i class="fa fa-search"></i> Acciones y búsqueda</h5>
                    <div class="ibox-tools">

                    </div>
                </div>
                <div class="ibox-content">
                    <div class="row">
                        <div class="form-group form-horizontal">
                            <div class="col-md-12">
                                <label class="col-md-1 control-label">Página:</label>
                                <div class="col-md-3">
                                    @Html.TextBoxFor(model => model.nombre, new { @class = "form-control" })
                                </div>
                                <div class="col-md-2">
                                    <button id='btnBuscar' type="button" onclick="buscarpagina()" class="btn btn-primary"> <i class="fa fa-search"></i>  Buscar </button>
                                </div>
                                <div class="col-md-6 text-right">
                                    <button id='btnNuevo' data-url="@Url.Action("InsertarPaginaModal", "Paginas")" class="btn btn-primary"> <i class="fa fa-desktop"></i> Nueva Pantalla</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-2">
            <div class="widget  navy-bg p-lg  text-center">
                <i class="fa fa-desktop fa-5x"></i>
            </div>
        </div>

    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5><i class="fa fa-table"></i> Listado de páginas</h5>
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                    </div>
                </div>
                <div class="ibox-content">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="table-responsive">
                                <div class="jqGrid_wrapper">
                                    <table id="gridlistapaginas" data-dataurl="@Url.Action("JsonListarPaginas", "Paginas", new { area = "Seguridad" })" data-edit="@Url.Action("EditarPaginaModal", "Paginas")"></table>
                                    <div id="gridlistapaginaspager"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>