@model Web.Coolbox.Areas.Seguridad.Models.Sistemas.ListarSistemasModel

@{
    ViewBag.Title = "Mantenimiento Sistemas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@section Styles{

    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/plugins/jqGrid/ui.jqgrid.css")" />
    <link rel="stylesheet" type="text/css" media="screen" href="@Url.Content("~/Content/plugins/awesome-bootstrap-checkbox/awesome-bootstrap-checkbox.css")" />
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/jqgrid.extension.css")" />
    <link rel="stylesheet" type="text/css" media="screen" href="@Url.Content("~/Content/plugins/awesome-bootstrap-checkbox/awesome-bootstrap-checkbox.css")" />
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/plugins/chosen/chosen.css")" />
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/plugins/sweetalert/sweetalert.css")" />
}
@section scripts {
    <script src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/plugins/jqGrid/jquery.jqGrid.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/plugins/jqGrid/i18n/grid.locale-es.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/plugins/chosen/chosen.jquery.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/plugins/sweetalert/sweetalert.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/plugins/touchspin/jquery.bootstrap-touchspin.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jsview/seguridad/seguridad.usuarios.listarsistemas.js")" type="text/javascript"></script>
}

<button id="templatetrash" style="display:none" title="Eliminar Usuario" data-url="@Url.Action("EliminarPagina", "Paginas", new { area = "seguridad" })" class="btn btn-danger btn-xs  btn-outline"><i class="fa fa-trash"></i></button>

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-5">
        <h2>@ViewBag.Title</h2>
        <ol class="breadcrumb">
            <li>
                <a href="@Url.Action("Index", "Account", new { area = ""})">NOL</a>
            </li>
            <li>
                <strong>Seguridad</strong>
            </li>
            <li class="active">
                <strong>@ViewBag.Title</strong>
            </li>
        </ol>
    </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">

        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <a class="collapse-link">
                    <i class="fa fa-chevron-up"></i>
                </a><strong><small>Acciones y búsqueda</small></strong>
                <div class="ibox-tools">

                </div>
            </div>
            <div class="ibox-content">
                <div class="row">
                    <div class="form-group">
                        <div class="col-md-12">
                            <button id='btnNuevo' data-url="@Url.Action("InsertarModificarSistemaModal", "Sistemas", new { idsis = Model.sis_int_id })" class="btn btn-primary">
                                <i class="fa fa-book"></i>  Nuevo Sistema
                            </button>
                        </div>
                    </div>
                </div>
                <br />
                <div class="row">
                    <div class="form-group">
                        <div class="col-md-12">
                            @*  @Html.Partial("_ListarUsuariosBusqueda", Model)*@

                            <label class="col-md-1 control-label">Nombres:</label>
                            <div class="col-md-3">
                                @Html.TextBoxFor(model => model.NombreCompleto, new { @class = "form-control" })
                            </div>

                            <button id='btnBuscar' type="button" onclick="buscarsistemas()" class="btn btn-primary"> <i class="fa fa-user"></i>  Buscar </button>

                        </div>
                    </div>
                </div>
            </div>


        </div>
    </div>

    <div class="row">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <a class="collapse-link">
                    <i class="fa fa-chevron-up"></i>
                </a><strong><small>Listado de usuarios</small></strong>
                <div class="ibox-tools">
                </div>
            </div>
            <div class="ibox-content">
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <div class="jqGrid_wrapper">
                                <table id="gridlistasistema" data-dataurl="@Url.Action("JsonListarSistemas", "Sistemas", new { area = "Seguridad" })" data-dataedit="@Url.Action("InsertarModificarSistemaModal", "Sistemas")" data-dataedit2="@Url.Action("ModificarSistemaModal", "Sistemas")" accesskey=""></table>
                                <div id="gridlistasistemapager"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
</div>