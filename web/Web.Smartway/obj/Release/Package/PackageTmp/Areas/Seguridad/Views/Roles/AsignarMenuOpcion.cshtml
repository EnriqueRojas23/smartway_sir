@model Web.Smartway.Areas.Seguridad.Models.Roles.AsignarMenuOpcionModel
@{
    ViewBag.Title = "Asignar Opciones";
}

@section Styles{
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/plugins/sweetalert/sweetalert.css")" />
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/plugins/jsTree/style.css")"/>
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/plugins/iCheck/custom.css")" />


}

@section scripts {
    <script src="@Url.Content("~/Scripts/plugins/jsTree/jstree.min.js")"></script>
    <script src="@Url.Content("~/Scripts/plugins/iCheck/icheck.min.js")"></script>
    <script src="@Url.Content("~/Scripts/app/seguridad/seguridad.usuarios.asignarmenuopcion.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/plugins/sweetalert/sweetalert.min.js")" type="text/javascript"></script>
}



<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-5">
        <h2>@ViewBag.Title</h2>
        <ol class="breadcrumb">
            <li>
                @Html.HiddenFor(model => model.ListaOpciones)
                <a href="@Url.Action("Index", "Account", new { area = ""})">Home</a>
            </li>
            <li>
                <a href="@Url.Action("ListarRoles", "Roles", new { area = "seguridad" })">Roles</a>
            </li>
            <li class="active">
                <strong>@ViewBag.Title</strong>
            </li>
        </ol>
    </div>

</div>

@using (Html.BeginForm("AsignarMenuOpcion", "Roles", FormMethod.Post, new { id = "formsubmit" ,  @class="form-horizontal"} ))
{
    @Html.HiddenFor(model => model.rol_int_id)
    @Html.Hidden("idmenutree")
    @Html.Hidden("idmenutreeauto")
    @Html.Hidden("valormenutree")
    
    <div class="wrapper wrapper-content">
        <div class="row">
            <div class="col-lg-12">
                <div class="ibox">

                    <div class="ibox-title">
                        <h5>
                            @Html.DisplayFor(model => model.rol_str_descrip)
                        </h5>
                    </div>
                    <div class="ibox-content">
                        <div class="row">
                            <div class="col-lg-5">
                                <div class="panel panel-primary">
                                    <div class="panel-heading">
                                        <i class="fa fa-list-alt"></i> Menú
                                    </div>
                                    <div class="panel-body">
                                <div id="jstreemenu">
                                    @Model.GetTreeMenuOpcion(Model.ListaOpciones);
                                </div>
                            </div>
                                    <br />
                                </div>
                            </div>
                            <div class="col-lg-7">
                                <div class="panel panel-warning">
                                    <div class="panel-heading">
                                        <i class="fa fa-edit"></i> Asignación
                                    </div>
                                    <div class="panel-body">
                                <div class="row">
                                            <div class="form-group has-error">
                                        <label for="CodigoMenu" class="col-sm-3 control-label">Código Menu:</label>
                                        <div class="col-sm-7">
                                            <input readonly="readonly" type="text" class="form-control" id="CodigoMenu">
                                        </div>
                                    </div>

                                            <div class="form-group has-error">
                                        <label for="NombreMenu" class="col-sm-3 control-label">Descripción Opción:</label>
                                        <div class="col-sm-7">
                                            <input readonly="readonly" type="text" class="form-control" id="NombreMenu">
                                        </div>
                                    </div>
                                    
                                            <div class="form-group has-error">
                                        <label for="TipoMenu " class="col-sm-3 control-label">Tipo Opcion:</label>
                                        <div class="col-sm-7">
                                            <input readonly="readonly" type="text" class="form-control" id="TipoMenu">
                                        </div>
                                    </div>

                                            <div class="form-group has-error">
                                        <label for="Url " class="col-sm-3 control-label">Url:</label>
                                        <div class="col-sm-7">
                                            <input readonly="readonly" type="text" class="form-control" id="Url">
                                        </div>
                                    </div>
                                    
                                            <div class="form-group has-error">
                                        @*<label class="col-sm-3 control-label">
                                            Permisos: <br />
                                        </label>*@

                                        @*<div class="col-sm-7">
                                            <div class="checkbox i-checks"><label> <input id="chkC" type="checkbox" value=""> Consultar </label></div>
                                            <div class="checkbox i-checks"><label> <input id="chkA" type="checkbox" value=""> Agregar </label></div>
                                            <div class="checkbox i-checks"><label> <input id="chkM" type="checkbox" value=""> Modificar </label></div>
                                            <div class="checkbox i-checks"><label> <input id="chkE" type="checkbox" value=""> Eliminar </label></div>
                                        </div>*@
                                    </div>
                                </div>
                            </div>
                                    <div class="panel-footer text-right">
                                        @*<button type="submit" class="btn btn-primary"><i class="fa fa-check-circle-o"></i> Aceptar </button>*@
                                        <button type="button" id="btnGuardar" data-url="@Url.Action("AsignarMenuOpcion2","Roles")" data-urlas="@Url.Action("AsignarMenuOpcion","Roles")"  onclick="Guardar(this)" class="btn btn-primary"><i class="fa fa-check-circle-o"></i> Guardar </button>
                                        <button type="button" class="btn btn-danger" data-url="@Url.Action("ListarRoles", "Roles", new { area = "seguridad"})" onclick="regresarListado(this);"> <i class="fa fa-times-circle-o"></i> Cancelar </button>
                                    </div>
                                </div>
                        </div>
                    </div>
                    </div>
                </div>
            </div>

        </div>
    </div>

}
