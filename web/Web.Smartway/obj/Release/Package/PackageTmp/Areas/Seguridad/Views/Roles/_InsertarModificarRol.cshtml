@model Web.Smartway.Areas.Seguridad.Models.Roles.InsertarModificarRolModel
@section Styles{
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/plugins/sweetalert/sweetalert.css")" />
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/plugins/jqGrid/ui.jqgrid.css")" />
    <link rel="stylesheet" type="text/css" media="screen" href="@Url.Content("~/Content/plugins/awesome-bootstrap-checkbox/awesome-bootstrap-checkbox.css")" />
}

@section scripts {
    <script src="@Url.Content("~/Scripts/plugins/sweetalert/sweetalert.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/plugins/validate/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/plugins/jqGrid/jquery.jqGrid.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/plugins/jqGrid/i18n/grid.locale-es.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jsview/seguridad/seguridad.usuarios.listarusuarios.js")" type="text/javascript"></script>

}
<form id="frmRolNuevo" role="form" method="post"  class=" form-horizontal">
    <div class="panel-primary">
        <div class="panel-heading">
            <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
            <h3 class=" panel-title">
                <i class="fa fa-plus-circle"></i> 
                Nuevo Rol de Usuario
            </h3>
        </div>
    </div>
    <div class="modal-body">
        <div class="form-group">
            <label class="col-md-2 control-label">Nombre :</label>
            <div class="col-md-9">
                @Html.TextBoxFor(model => model.rol_str_descrip, new { @class = "form-control", @required = "true", placeholder = "Nombre del Rol" })
            </div>
        </div>
        <div class="form-group">
            <label class="col-md-2 control-label">(*) Alias:</label>
            <div class="col-md-9">
                @Html.TextBoxFor(model => model.rol_str_alias, new { @class = "form-control", @required = "true", placeholder = "Alias" })
            </div>
        </div> 
        <div class="form-group">
            <label class="col-md-2 control-label">Activo:</label>
            <div class="col-md-10">
                <label class="checkbox-inline i-checks"> @Html.CheckBoxFor(model => model.rol_bit_activo)</label> 
            </div>   
        </div>
     </div>
     <div class="modal-footer">
        <button type="button"   class="btn btn-danger" data-dismiss="modal"><i class="fa fa-times-circle-o"></i> Cerrar</button>
        <button id="btnRegistrar" data-url="@Url.Action("Insertar", "Roles")" type="button" class="btn btn-primary"> <i class="fa fa-save"></i> Registrar</button>
     </div>
</form>

