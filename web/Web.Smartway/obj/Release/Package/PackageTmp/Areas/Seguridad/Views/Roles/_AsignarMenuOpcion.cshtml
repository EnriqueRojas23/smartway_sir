@model Web.Coolbox.Areas.Seguridad.Models.Roles.AsignarMenuOpcionModel
@section Styles{
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/plugins/sweetalert/sweetalert.css")" />
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/plugins/jsTree/style.css")"/>
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/plugins/iCheck/custom.css")" />
}

@section scripts {
    <script src="@Url.Content("~/Scripts/plugins/jsTree/jstree.min.js")"></script>
    <script src="@Url.Content("~/Scripts/plugins/iCheck/icheck.min.js")"></script>
    @*<script src="@Url.Content("~/Scripts/app/seguridad/seguridad.usuarios.asignarmenuopcion.js")" type="text/javascript"></script>*@
    <script src="@Url.Content("~/Scripts/plugins/sweetalert/sweetalert.min.js")" type="text/javascript"></script>
}
<form id="frmAsignarMenu" role="form" method="post" class=" form-horizontal">
    <div class="panel-primary">
        <div class="panel-heading">
            <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
            <h3 class=" panel-title">
                <i class="fa fa-edit"></i>
                Asignar Menú Rol
            </h3>
        </div>
    </div>
    <div class="modal-body">
            @Html.HiddenFor(model => model.rol_int_id)
        <div id="jstreemenu">
            @Model.GetTreeMenuOpcion(Model.ListaOpciones);
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" id="btnGuardar" data-url="@Url.Action("AsignarMenuOpcion2","Roles")" data-urlas="@Url.Action("AsignarMenuOpcion","Roles")" onclick="GuardarAsignacion(this)" class="btn btn-primary"><i class="fa fa-save"></i> Asignar </button>
        <button type="button" class="btn btn-danger" data-dismiss="modal"> <i class="fa fa-times-circle-o"></i> Cerrar </button>
    </div>
</form>
