@model Web.Coolbox.Models.Account.ForgotPasswordModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>Coolbox | Login</title>

    <link href="~/Content/bootstrap.min.css" rel="stylesheet">
    <link href="~/Fonts/font-awesome/css/font-awesome.css" rel="stylesheet">

    <link href="~/Content/animate.css" rel="stylesheet">
    <link href="~/Content/style.css" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/plugins/ladda/ladda-themeless.min.css")" />

    <script src="@Url.Content("~/Scripts/jquery-2.1.1.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/plugins/ladda/spin.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/plugins/ladda/ladda.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/plugins/ladda/ladda.jquery.min.js")" type="text/javascript"></script>
</head>

<body class="gray-bg">
    <div class="passwordBox animated fadeInDown no-padding" style="width:380px;">
        <div class=" row">
        <div class="col-md-12">
            <div class="panel-heading logo-name ">
                <div class=" row-fluid user-row">
                    <img src="@Url.Content("~/Images/coolbox.png")" class="img-responsive" alt="Conxole Admin" />
                </div>
            </div>
            <div class="ibox-content">
                <h2 class="font-bold text-center">Olvidaste tu contraseña</h2>
                <p style="font-size:12px">
                    Ingresa tu usuario y tu password será enviado al correo con el que te registraste (para usuarios de tienda sera enviado al correo de la tienda).
                </p>
                <div class="row">
                    <div class="col-lg-12">

                        @using (Html.BeginForm("RecuperarPassword", "Account", FormMethod.Post, new { @class = "m-t", @role = "form" }))
                        {
                            <div class="form-group">
                                @Html.TextBoxFor(model => model.usuario, new { @class = "form-control", @required = "true", placeholder = "Usuario" })
                            </div>
                            <button type="submit" class="btn btn-primary  ladda-button block full-width m-b" data-style="expand-right"><i class="fa fa-envelope"></i> Enviar mi password</button>
                            <a class="btn btn-success btn-block" href="@Url.Action("SignOut", "Account", new { area = ""})"><i class="fa fa-home"></i> Retornar al Login</a>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

        <hr />
        <div class="row">
            <div class="col-md-6">
                Coolbox
            </div>
            <div class="col-md-6 text-right">
                <small>© 2016-2017</small>
            </div>
        </div>
    </div>

</body>

</html>



<script type="text/javascript">
    $(document).ready(function () {
        $('.ladda-button').ladda('bind', { timeout: 5000000 });
    });
</script>  