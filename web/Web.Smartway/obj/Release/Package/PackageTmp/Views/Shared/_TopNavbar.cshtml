@using Seguridad.Common;

@{
    var usuario_cache = ViewBag.Usuario;
    var rolactual_cache = ViewBag.Perfil;
    var nombreperfilactual = rolactual_cache == null ? String.Empty : rolactual_cache.NombrePerfil;
    var nombreusuario = usuario_cache == null ? String.Empty : usuario_cache.NombreUsuario;
    var listperfiles = usuario_cache == null ? new List<Perfil>() : usuario_cache.Perfiles;
}



<div class="row border-bottom">
    <nav class="navbar navbar-fixed-top" role="navigation" style="margin-bottom: 0">
     
            <ul class="nav navbar-top-links navbar-right">
                <li>
                    ¡Bienvenido!
                    <span class="thumb-sm avatar pull-xs-right">
                        <img alt="image" width="20" class="img-circle" src="@Url.Content("~/Images/person.jpg")" />
                    </span>

                </li>
                <li>
                      <strong class="font-bold hidden-sm-down">@nombreusuario</strong>
                </li>
                <li>

                   
                </li>
                <li class="dropdown nav-item">
                    <a href="#" class="dropdown-toggle nav-link" data-toggle="dropdown">
                        <i class="fa fa-cog fa-lg"></i>
                    </a>
                    <ul class="dropdown-menu dropdown-menu-right">
                     
                        <li><a class="dropdown-item" href="profile.html"><i class="glyphicon glyphicon-user"></i> &nbsp; My Account</a></li>
                        <li class="dropdown-divider"></li>
                        @foreach (var perfil in listperfiles)
                        {
                            if (perfil.NombrePerfil != nombreperfilactual)
                            {
                                <li> <a href="@Url.Action("CambiarRol", "Account", new { idr = perfil.IdPerfil, area = "" })">Cambiar a rol @perfil.NombrePerfil</a></li>
                            }
                        }
                        <li><a class="dropdown-item" href="calendar.html">Calendar</a></li>
                        <li><a class="dropdown-item" href="inbox.html">Inbox &nbsp;&nbsp;<span class="label label-pill label-danger animated bounceIn">9</span></a></li>
                        <li class="dropdown-divider"></li>
                        <li>
                                <a href="@Url.Action("SignOut", "Account", new { area = ""})">
                                    <i class="fa fa-sign-out"></i><strong class="font-bold hidden-sm-down">Cerrar Sesión</strong>
                                </a>
                            </li>
                    </ul>
                </li>
            </ul>
           
    </nav>
</div>
