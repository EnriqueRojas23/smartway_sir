@model Web.Smartway.Areas.Mantenimiento.Models.DiagnosticoModel

@section Styles {
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/plugins/jqGrid/ui.jqgrid.css")" />
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/jqgrid.extension.css")"  />

}
@using (Ajax.BeginForm("VincularProductoModal", "Mantenimiento", null, new AjaxOptions { HttpMethod = "POST", InsertionMode = InsertionMode.Replace, UpdateTargetId = "modalcontent", OnComplete = "OnCompleteTransaction_Vincular(xhr, status)" }, new { @class = "form-horizontal" }))
{
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        @*<i class="fa fa-users fa-4x"></i>*@
        <h4 class="modal-title">Vincular tipo de productos</h4>
        <small class="font-bold">Seleccionar los tipos de productos a vincular.</small>
    </div>
    <div class="modal-body">
        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <div class="panel panel-danger">
                        <div class="panel-body">
                            @Html.ListBoxFor(m => m.TipoProductosSeleccionados, Model.ListaTipoProductos, new { multiple = "multiple" })
                        </div>
                    </div>
                </div>
            </div>
           
        </div>
    </div>
    <div class="modal-footer">
            <button type="submit" class="btn  btn-outline btn-primary btn-sm"><i class="fa fa-check-circle-o"></i> Guardar</button>
            <button type="button" class="btn  btn-outline btn-danger btn-sm" data-dismiss="modal"><i class="fa fa-times-circle-o"></i>  Cancelar</button>
        @Html.HiddenFor(x=>x.iddiagnostico)
    </div>
}