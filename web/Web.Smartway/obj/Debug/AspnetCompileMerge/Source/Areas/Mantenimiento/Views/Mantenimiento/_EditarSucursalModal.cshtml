@model Web.Smartway.Areas.Mantenimiento.Models.SucursalModel

@using (Ajax.BeginForm("AgregarSucursalModal", "Mantenimiento"
    , null, new AjaxOptions { HttpMethod = "POST",
        InsertionMode = InsertionMode.Replace, UpdateTargetId = "modalcontent", OnComplete = "OnCompleteTransaction(xhr, status)" }, new { @class = "form-horizontal" , id= "frmAgregarSucursal" }))
{
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4 class="modal-title">Editar Sucursal</h4>
        <small class="font-bold">Digitar los datos obligatorios para el registro.</small>
    </div>
    <div class="modal-body">
        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <div class="col-md-6">
                        <label class="control-label">Código:</label>
                        @Html.TextBoxFor(model => model.codigo, new { @maxlength = "10", @class = "form-control" })
                    </div>
                    <div class="col-md-6">
                        <label class="control-label">Nombre :</label>
                        @Html.TextBoxFor(model => model.nombre, new { @maxlength = "100", @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-6">
                        <label class="control-label">Tipo Sucursal :</label>
                        @Html.DropDownListFor(model => model.idtiposucursal, (SelectList)ViewData["listatiposucursal"], "[Seleccionar]", new { @class = "form-control" })
                    </div>
                    <div class="col-md-6">
                        <label class="control-label">Seleccionar Partner/Fabricante:</label>
                        @Html.DropDownListFor(model => model.idpartner, (SelectList)ViewData["listapartner"], "[Seleccionar]", new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-12">
                        <label class="control-label">Ubigeo:</label>
                        @Html.DropDownListFor(model => model.iddistrito, (SelectList)ViewData["listaubigeos"], "[Seleccionar]", new { @id = "ddlUbigeo", @class = "chosen-select form-control" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-12">
                        <label class="control-label">Dirección :</label>
                        @Html.TextBoxFor(model => model.direccion, new { @placeholder = "Dirección Principal", @maxlength = "100", @class = "form-control" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-6">
                        <label class="control-label">Persona Contacto :</label>
                        @Html.TextBoxFor(model => model.contacto, new { @placeholder = "Persona Contacto", @maxlength = "50", @class = "form-control" })
                    </div>
                    <div class="col-md-6">
                        <label class="control-label">Email:</label>
                        @Html.TextBoxFor(model => model.email, new { @type = "email", @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-6">
                        <label class="control-label">Teléfono:</label>
                        @Html.TextBoxFor(model => model.telefono, new { @placeholder = "Teléfono", @maxlength = "10", @class = "form-control" })
                    </div>
                    <div class="col-md-6">
                        <label class="control-label">Celular:</label>
                        @Html.TextBoxFor(model => model.celular, new { @placeholder = "Teléfono", @maxlength = "10", @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-6">
                        <label class="control-label">Tipo Pago:</label>
                        @Html.DropDownListFor(model => model._tipopago, (SelectList)ViewData["listatipopago"], "[Seleccionar]", new { @id = "ddltipopago", @multiple = "multiple", @class = "chosen-select form-control" })
                    </div>
                    <div class="col-md-6">
                        <label class="control-label">Delivery:</label>
                        @Html.CheckBoxFor(model => model.delivery, new { @class = "form-control input-sm" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-6">
                        <label class="control-label">Condición Recojo:</label>
                        @Html.DropDownListFor(model => model.idcondicionrecojo, (SelectList)ViewData["listacondicionrecojo"], "[Seleccionar]", new { @class = "form-control" })
                    </div>
                    <div class="col-md-6">
                        <label class="control-label">Condición de Entrega:</label>
                        @Html.DropDownListFor(model => model.idcondicionentrega, (SelectList)ViewData["listacondicionentrega"], "[Seleccionar]", new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-6">
                        <label class="control-label">Reparación en tienda:</label>
                        @Html.RadioButtonFor(x => x.reparacion, true, new { @class = "form-control input-sm" })
                    </div>
                    <div class="col-md-6">
                        <label class="control-label">Laboratorio Central:</label>
                        @Html.RadioButtonFor(x => x.reparacion, false, new { @class = "form-control input-sm" })
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <div class="col-lg-offset-6 col-md-6">
            <button type="submit" onclick="guardar()" class="btn btn-primary"><i class="fa fa-check-circle-o"></i> Guardar</button>
            <button type="button" onclick="" class="btn  btn-inverse" data-dismiss="modal"><i class="fa fa-times-circle-o"></i>  Cancelar</button>
        </div>
        @Html.HiddenFor(x => x.idsucursal)
        @Html.HiddenFor(x=>x.iddireccion)
        @Html.HiddenFor(x => x.idtipopago)
        
    </div>

}