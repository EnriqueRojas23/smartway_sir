@model Web.Smartway.Areas.Agendamiento.Models.IncidenciaModel

@section Styles
{

}

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
    <h4 class="modal-title">Registrar Detalle Físico Producto</h4>
</div>
<div class="modal-body">
    <form role="form" method="post" class="form-horizontal">
        <div class="form-group">
            <div class="col-md-12">
                <div class="col-md-3">
                    <div class="panel panel-danger">
                        <div class="panel-heading">
                            <h4 class="panel-title">
                                <i class="fa fa-tablet"></i> Parte Delantera
                            </h4>
                        </div>
                        <div id="divdelantero" class="panel-body">
                            <img class="img-responsive align-mid center-block" width="150" src="~/Images/Delantera.png" />
                        </div>
                        <div class="panel-footer">
                            <div class="form-group">
                                <div class="col-md-12">
                                    <label class="col-md-12 control-label">Estado de selección:</label>
                                    @Html.DropDownList("ddlEstadoDelantero", (SelectList)ViewData["ListaEstadosFiProducto"], "[Sin daño]", new { @class = "form-control" })
                                </div>
                                <div id="delantera_result" style="position:absolute" class="col-md-12"></div>
                                @Html.Hidden("hidden_selected")
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="panel panel-danger">
                        <div class="panel-heading">
                            <h4 class="panel-title">
                                <i class="fa fa-tablet"></i> Parte Posterior
                            </h4>
                        </div>
                        <div id="divposterior" class="panel-body">
                            <img class="img-responsive align-mid center-block" width="150" src="~/Images/Posterior.png" />
                        </div>
                        <div class="panel-footer">
                            <div class="form-group">
                                <div class="col-md-12">
                                    <label class="col-md-12 control-label">Estado de selección:</label>
                                    @Html.DropDownList("ddlEstadoPosterior", (SelectList)ViewData["ListaEstadosFiProducto"], "[Sin Daño]", new { @class = "form-control input-sm" })
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                        <div class="panel panel-danger">
                            <div class="panel-heading">
                                <h4 class="panel-title">
                                    <i class="fa fa-tablet"></i>  Derecho
                                </h4>
                            </div>
                            <div id="divderecho" class="panel-body">
                                <img class="img-responsive center-block" width="56" src="~/Images/LateralDerecho.png">
                            </div>
                            <div class="panel-footer">
                                <div class="form-group">
                                    <div class="col-md-12">
                                        <label class="col-md-12 control-label">Estado de selección:</label>
                                        @Html.DropDownList("ddlLateralDerecho", (SelectList)ViewData["ListaEstadosFiProducto"], "[Sin Daño]", new { @class = "form-control input-sm" })
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                <div class="col-md-3">
                        <div class="panel panel-danger">
                            <div class="panel-heading">
                                <h4 class="panel-title">
                                    <i class="fa fa-tablet"></i>  Izquierdo
                                </h4>
                            </div>
                            <div id="divizquierdo"class="panel-body">
                                <img class="img-responsive center-block" width="56" src="~/Images/LateralIzquierdo.png" />
                            </div>
                            <div class="panel-footer">
                                <div class="form-group">
                                    <div class="col-md-12">
                                        <label class="col-md-12 control-label">Estado de selección:</label>
                                        @Html.DropDownList("ddlLateralIzquierdo", (SelectList)ViewData["ListaEstadosFiProducto"], "[Sin Daño]", new { @class = "form-control input-sm" })
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
            </div>
            <div class="col-md-6">
              <div class="col-md-6">
                  <div class="panel panel-danger">
                      <div class="panel-heading">
                          <h4 class="panel-title">
                              <i class="fa fa-tablet"></i> Inferior
                          </h4>
                      </div>
                      <div id="divinferior" class="panel-body">
                          <br />
                          <img class="img-responsive center-block" width="350" src="~/Images/Inferior.png" />
                      </div>
                      <div class="panel-footer">
                          <div class="form-group">
                              <div class="col-md-12">
                                  <label class="col-md-12 control-label">Estado de selección:</label>
                                  @Html.DropDownList("ddlEstadoInferior", (SelectList)ViewData["ListaEstadosFiProducto"], "[Sin Daño]", new { @class = "form-control input-sm" })
                              </div>
                          </div>
                      </div>
                  </div>
              </div>
              <div class="col-md-6">
                  <div class="panel panel-danger">
                      <div class="panel-heading">
                          <h4 class="panel-title">
                              <i class="fa fa-tablet"></i> Superior
                          </h4>
                      </div>
                      <div id="divsuperior" class="panel-body">
                          <br/>
                          <img class="img-responsive center-block" width="350" src="~/Images/Superior.png" />
                      </div>
                      <div class="panel-footer">
                          <div class="form-group">
                              <div class="col-md-12">
                                  <label class="col-md-12 control-label">Estado de selección:</label>
                                  @Html.DropDownList("ddlEstadoSuperior", (SelectList)ViewData["ListaEstadosFiProducto"], "[Sin Daño]", new { @class = "form-control input-sm" })
                              </div>
                          </div>
                      </div>
                  </div>
              </div>
          </div>
        </div>
    </form>
</div>
<div class="modal-footer">
    <button type="button" class="btn  btn-outline btn-primary btn-sm" onclick="RegistrarDetalleFisicoProducto()" data-dismiss="modal"><i class="fa fa-save"></i>  Guardar </button>
</div>
