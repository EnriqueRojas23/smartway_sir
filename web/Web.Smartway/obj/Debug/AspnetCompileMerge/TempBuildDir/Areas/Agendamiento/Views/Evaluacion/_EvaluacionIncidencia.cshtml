@model  Web.Smartway.Areas.Agendamiento.Models.EvaluacionModel
@section Styles
{
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/plugins/sweetalert/sweetalert.css")" />
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/plugins/ladda/ladda-themeless.min.css")" />
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/plugins/dataTables/datatables.min.css")" />
}
@section scripts
{
    <script src="@Url.Content("~/Scripts/plugins/sweetalert/sweetalert.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/app/CIC/incidencias.atencion.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/plugins/ladda/spin.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/plugins/ladda/ladda.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/plugins/ladda/ladda.jquery.min.js")" type="text/javascript"></script>
}
<form id="frmPropuestaEvaluacion" role="form" method="post" action="@Url.Action("RegistrarEvaluacion", "Incidencia")" class="form-horizontal">
    <div class="modal-header">
        <i class="fa fa-gear fa-4x fa-spin"></i>
        <h4 class="modal-title">Resultado de la Evaluación</h4>
    </div>
    <div class="modal-body">
        @*<div class="form-group">
                 <div class="col-md-12">
                     <label class="col-md-4 control-label">Requerimiento Cliente:</label>
                     <div class="col-md-8">@Html.DropDownListFor(model => model.idrequerimientocliente, (SelectList)ViewData["ListaTipoRequerimiento"], "", new { @class = "form-control ", @required = "true", @disabled = "disabled" })</div>
                 </div>
            </div>*@
        <div class="form-group">
            <div class="col-md-12">

                @if (Model.Evaluacion == true)
                {
                    <div class=" alert alert-success no-margins">
                        <div class="col-md-2 text-center">
                            <i class="fa fa-check-circle-o fa-3x"></i>
                        </div>
                        @Html.DisplayFor(model => model.ResultadoEvaluacion)
                    </div>
                }
                else
                {
                    <div class=" alert alert-danger no-margins">
                        <div class="col-md-2 text-center">
                            <i class="fa fa-times-circle-o fa-3x"></i>
                        </div>
                        @Html.DisplayFor(model => model.ResultadoEvaluacion)
                    </div>
                }
                @Html.HiddenFor(model => model.idincidencia)
                @Html.HiddenFor(model => model.observacion)
                @Html.HiddenFor(model => model.engarantia)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-12">
                <div class="alert alert-info no-margins">
                    <p>
                        Tener en cuenta lo siguiente, en caso la Evaluación a registrar sea:
                        <ul>
                            <li><strong>Aprobada</strong> Se registrará una solicitud de Nota de crédito y se realiza la propuesta de solución.</li>
                            <li><strong>Desaprobada</strong> , Se procederá a hacer una cotización.</li>
                            <li>  En ambos casos se registra la evaluación.</li>
                        </ul>
                    </p>
                </div>
            </div>
        </div>
        <div class="form-group">
            @*<div class="col-md-12">
                      <label class="col-md-12">Usted puede realizar las siguientes propuestas:</label>
                      <div class="col-md-12">@Html.DropDownListFor(model => model.idpropuesta, (SelectList)ViewData["ListaPropuestasEvaluacion"], "[---]", new { @class = "form-control", @required = "true" })</div>
                  </div>
                </div>
                 <div class="form-group">
                     <label class="col-md-12">Observación:</label>
                     <div class="col-md-12">@Html.TextAreaFor(model => model.ObservacionPropuesta, 2, 1, new { @class = "form-control input-sm" })</div>
                 </div>*@
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" id="btnAceptarPropuesta" data-url="@Url.Action("EvaluarPropuesta", "Incidencia")" class="btn btn-outline btn-primary btn-sm"><i class="fa fa-save"></i>  Registrar Propuesta</button>
        <button type="button" id="btnCancelarPropuesta" class="btn  btn-outline btn-danger btn-sm" data-dismiss="modal"><i class="fa fa-times-circle-o"></i>  Cancelar</button>

    </div>
</form>