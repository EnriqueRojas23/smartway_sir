@model Web.Smartway.Areas.Agendamiento.Models.OrdenServicioModel
@section Styles {
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/plugins/jqGrid/ui.jqgrid.css")" />
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/jqgrid.extension.css")" />

}
@using (Ajax.BeginForm("AsignarTecnico", "Reparacion", null, new AjaxOptions { HttpMethod = "POST", InsertionMode = InsertionMode.Replace, UpdateTargetId = "modalcontent", OnComplete = "OnCompleteTransaction_asignarvehiculo(xhr, status)" }, new { @class = "form-horizontal" }))
{
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4 class="modal-title">Asignar Técnico</h4>
        <small class="font-bold">Seleccionar los datos necesarios para el registro.</small>
    </div>
    <div class="modal-body">
        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <label class=" col-md-2 control-label">Técnico:</label>
                    <div class="col-md-4">
                        @Html.DropDownListFor(x=>x.idtecnico, (SelectList)ViewData["listadotecnicos"], "[Técnico]", new { @class = "chosen-select form-control input-sm", @required = "true" })
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <div class="col-md-offset-6 col-md-3">
            <button type="button" id="btnAsignar" class="btn btn-block btn-primary">  Asignar</button>
        </div>
        <div class="col-md-3">
            <button type="button" class="btn btn-block btn-inverse" data-dismiss="modal">  Cerrar</button>
        </div>
    </div>
    @Html.HiddenFor(x=>x.idordenserviciotecnico)
}