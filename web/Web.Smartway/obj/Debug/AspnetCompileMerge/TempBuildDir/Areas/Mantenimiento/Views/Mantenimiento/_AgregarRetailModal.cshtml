@model Web.Smartway.Areas.Mantenimiento.Models.PartnerModel

@using (Ajax.BeginForm("AgregarClienteModal", "Mantenimiento", null, new AjaxOptions { HttpMethod = "POST", InsertionMode = InsertionMode.Replace, UpdateTargetId = "modalcontent", OnComplete = "OnCompleteTransaction(xhr, status)" }, new { @class = "form-horizontal" }))
{
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        @*<i class="fa fa-users fa-4x"></i>*@
        <h4 class="modal-title">Agregar Cliente</h4>
        <small class="font-bold">Digitar los datos necesarios para el registro de la nueva moneda.</small>
    </div>
    <div class="modal-body">
        <div class="row">
            
            <div class="col-md-12">

                <div class="form-group">
                    <div class="col-md-6">
                        <label class="control-label">RUC :</label>
                        @Html.TextBoxFor(model => model.numerodocumento, new { @minlength = "8", @maxlength = "11", @class = "form-control", @onkeypress = "return validateFloatKeyPress(this,event);", @required = "true" })
                    </div>
                    <div class="col-md-6">
                        <label class="control-label">Nombre Corto:</label>
                        @Html.TextBoxFor(model => model.nombrecorto, new { @maxlength = "10", @class = "form-control", @required = "true" })
                    </div>


                </div>
                <div class="form-group">
                    <div class="col-md-12">
                        <label class="control-label">Razón Social / Nombre :</label>
                        @Html.TextBoxFor(model => model.razonsocial, new { @maxlength = "50", @class = "form-control", @required = "true" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-12">
                        <label class="control-label">Ubigeo :</label>
                        @Html.DropDownListFor(model => model.iddistrito, (SelectList)ViewData["listaubigeos"], "[Ubigeo]", new { @id = "ddlUbigeo", @class = "chosen-select form-control", @data_url = @Url.Action("JsonGetDatosDireccion", "Mantenimiento") })
                    </div>

                </div>
                <div class="form-group">
                    <div class="col-md-4">
                        <label class="control-label">Cod. Dirección :</label>
                        @Html.TextBoxFor(model => model.codigodireccion, new { @placeholder = "Código", @maxlength = "10", @class = "form-control", @required = "true" })
                    </div>
                    <div class="col-md-8">
                        <label class="control-label">Dirección :</label>
                        @Html.TextBoxFor(model => model.direccion, new { @placeholder = "Dirección Principal", @maxlength = "100", @class = "form-control", @required = "true" })

                    </div>
                </div>

                <div class="form-group">


                    <div class="col-md-4">
                        <label class="control-label">Moneda Crédito :</label>
                        @Html.DropDownListFor(m => m.idmoneda, (SelectList)ViewData["ListaMoneda"], "[Moneda]", new { @class = "form-control", @required = "true" })
                    </div>
                    <div class="col-md-8">
                        <label class="control-label">Línea Crédito :</label>
                        @Html.TextBoxFor(model => model.lineacredito, "{0:0.00}", new { @maxlength = "7", @class = "form-control numericOnly", @onkeypress = "return validateFloatKeyPress(this,event);", @required = "true" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-12">
                        <label class="control-label">Teléfono:</label>
                        @Html.TextBoxFor(model => model.telefono, new { @placeholder = "Teléfono", @maxlength = "20", @class = "form-control", @required = "true" })
                    </div>
                </div>
            </div>


                
          </div>
           
     </div>
    <div class="modal-footer">
                    <div class="col-lg-offset-7 col-md-5">
                        <button type="submit" class="btn btn-primary"><i class="fa fa-check-circle-o"></i> Guardar</button>
                        <button type="button" onclick="" class="btn  btn-inverse" data-dismiss="modal"><i class="fa fa-times-circle-o"></i>  Cancelar</button>
                    </div>
            </div>
          
}