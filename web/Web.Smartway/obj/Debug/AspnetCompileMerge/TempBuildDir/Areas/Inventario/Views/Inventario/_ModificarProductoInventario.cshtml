
@model Web.Smartway.Areas.Inventario.Models.InventarioModel

@section Styles {
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/plugins/jqGrid/ui.jqgrid.css")" />
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/jqgrid.extension.css")" />

}
@using (Ajax.BeginForm("ActualizarInventario", "Inventario", null, new AjaxOptions { HttpMethod = "POST", InsertionMode = InsertionMode.Replace, UpdateTargetId = "modalcontent", OnComplete = "OnCompleteTransaction(xhr, status)" }, new { @class = "form-horizontal" }))
{
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4 class="modal-title">Realizar Operaciones en Inventario</h4>
        <small class="font-bold">Realiza las modificaciones en el Inventario.</small>
    </div>
    <div class="modal-body">
        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <div class="col-md-4">
                        <label class="control-label">Sucursal</label>
                        @Html.DropDownListFor(model => model.idsucursal_2, (SelectList)ViewData["listasucursal"], "-- Seleccionar --", new { @class = "form-control", })
                    </div>
                    <div class="col-md-4">
                        <label class="control-label">Cambio de almacén:</label>
                        @Html.DropDownListFor(m => m.idalmacennuevo, Enumerable.Empty<SelectListItem>(), "--Todos--", new { @class = "form-control input-sm" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-4">
                        <label class="control-label">Cambio de Estado:</label>
                        @Html.DropDownListFor(m => m.idestadonuevo, (SelectList)ViewData["listadoestado"], "--Todos--", new { @class = "form-control input-sm" })
                    </div>
                    <div class="col-md-4">
                        <label class="control-label">Cantidad:</label>
                        @Html.TextBoxFor(m => m.cantidadnueva, new { @class = "form-control input" })
                    </div>
                </div>
                <div class="hr-line-dashed"></div>
            </div>
  
     
        </div>
    </div>
    <div class="modal-footer">
        <div class="col-md-offset-6 col-md-6">
            <button type="submit" class="btn  btn-primary btn-sm">Ejecutar </button>
            <button type="button" class="btn  btn-inverse btn-sm" data-dismiss="modal">  Cancelar</button>
        </div>
    </div>
    @Html.HiddenFor(x=>x.idinventario)
}