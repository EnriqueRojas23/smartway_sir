@model Web.Smartway.Areas.Mantenimiento.Models.DireccionModel

@section Styles {
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/plugins/jqGrid/ui.jqgrid.css")" />
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/jqgrid.extension.css")" />

}
@using (Ajax.BeginForm("AgregarFormulaModal", "Mantenimiento", null, new AjaxOptions { HttpMethod = "POST", InsertionMode = InsertionMode.Replace, UpdateTargetId = "modalcontent", OnComplete = "OnCompleteTransaction(xhr, status)" }, new { @class = "form-horizontal" }))
{
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        @*<i class="fa fa-users fa-4x"></i>*@
        <h4 class="modal-title">Lista de direcciones </h4>
        <small class="font-bold">Digitar los datos necesarios para el registro.</small>
    </div>
    <div class="modal-body">
        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <label class="control-label col-md-2">Cliente :</label>
                    <div class="col-md-6"> @Model.cliente </div>
                </div>
                <div class="form-group">
                    <div class="col-md-2">
                        <button id="addrowp" type="button" class="btn btn-primary"> <i class="fa fa-plus"></i> Agregar  </button>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-12 jqGrid_wrapper">
                        <table id="griddirecciones"
                               data-dataurl="@Url.Action("JsonGetDirecciones", "Mantenimiento")"
                               data-editurl="@Url.Action("GridSaveDireccion", "Mantenimiento")"></table>
                        <div id="griddirecionespager"></div>
                    </div>
                </div>
                    <div class="form-group">
                        <button type="button" class="btn  btn-outline btn-danger btn-sm" data-dismiss="modal"><i class="fa fa-times-circle-o"></i>  Cerrar</button>
                    </div>
                </div>

            </div>
    </div>
    <div class="modal-footer"></div>
}