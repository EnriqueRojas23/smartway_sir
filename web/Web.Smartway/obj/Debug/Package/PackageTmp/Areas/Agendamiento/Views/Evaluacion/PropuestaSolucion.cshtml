@model Web.Smartway.Areas.Agendamiento.Models.IncidenciaModel
@{
    ViewBag.Title = "PropuestaSolucion";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Styles
{
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/plugins/sweetalert/sweetalert.css")" />
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/plugins/dataTables/datatables.min.css")" />
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/plugins/toastr/toastr.min.css")" />
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Scripts/plugins/MetroJS/release/MetroJs.Full/MetroJs.css")" />
}
@section scripts
{
    <script src="@Url.Content("~/Scripts/plugins/sweetalert/sweetalert.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/app/Agendamiento/agendamiento.propuesta.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/plugins/jeditable/jquery.jeditable.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/plugins/dataTables/datatables.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/plugins/toastr/toastr.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/plugins/MetroJS/release/MetroJs.Full/MetroJs.js")" type="text/javascript"></script>
}


<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Propuesta Solución</h2>
         @Html.Partial("_IncidenciaRoot", Model)
    </div>
    <div class="col-lg-2">
    </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
@using (Ajax.BeginForm("RegistrarPropuestaIndependiente", "propuesta", new { area = "Agendamiento" }, new AjaxOptions { HttpMethod = "POST", OnComplete = "OnCompleteTransaction(xhr, status)" }, new { @role = "form", @id = "frmPropuesta", @class = "form-horizontal" }))
{
        <div class="row">
            <div class="col-lg-6">
                <div class="ibox float-e-margins">
                    <div class="ibox-title">
                        <h5><i class="fa fa-info-circle"></i> Propuesta - Solución</h5>
                        <div class="ibox-tools">
                            <a class="collapse-link">
                                <i class="fa fa-chevron-up"></i>
                            </a>
                        </div>
                    </div>
                    <div class="ibox-content">
                        <div class="form-group">
                            <div class="col-md-12">
                                <div class="panel panel-primary">
                                    <div class="panel-heading">
                                        <i class="fa fa-support"></i>  Propuesta
                                    </div>
                                    <div class="panel-body">
                                        <div class="form-group">
                                            <label class="col-md-4 control-label">Propuesta:</label>
                                            <div class="col-md-8">
                                                @Html.HiddenFor(model => model.idincidencia)
                                                Cambio de Producto
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="col-md-4 control-label">Cliente Satisfecho:</label>
                                            <div class="col-md-8">
                                                Propuesta Aceptada
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="col-md-4 control-label">Observación:</label>
                                            <div class="col-md-8">
                                                No hay observaciones
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="col-md-4 control-label">Estado Incidencia:</label>
                                            Incidencia Registrada
                                        </div>
                                        <div class="form-group">
                                            <div class="col-md-3 col-md-offset-4"><button type="submit" class="btn  btn-line btn-primary demo3"><i class="fa fa-save"></i> Registrar </button></div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="ibox-content">

                    <section class="widget widget-card bg-gray">
                        <div class="widget-body clearfix">
                            <div class="live-tile" data-mode="carousel" data-speed="750" data-delay="4000" data-height="100">
                                <div class="bg-gray text-white">
                                    <div class="row">
                                        <div class="col-xs-3">
                                            <span class="widget-icon">
                                                <i class="glyphicon glyphicon-briefcase"></i>
                                            </span>
                                        </div>
                                        <div class="col-xs-9">
                                            <h6 class="no-margin">INCIDENCIA</h6>
                                            <p class="h2 no-margin fw-normal">@Model.anioincidencia - @Model.numeroincidencia </p>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-xs-3">
                                            <h6 class="no-margin">Cod.</h6>
                                            <p class="value5">@Model.codigoproducto</p>
                                        </div>
                                        <div class="col-xs-9">
                                            <h6 class="no-margin">Producto</h6>
                                            <p class="value5">@Model.producto</p>
                                        </div>
                                    </div>
                                </div>
                                <div class="text-white">
                                    <div class="row">
                                        <div class="col-xs-3">
                                            <span class="widget-icon">
                                                <i class="glyphicon glyphicon-certificate"></i>
                                            </span>
                                        </div>
                                        <div class="col-xs-9">
                                            <h6 class="no-margin">GARANTÍA</h6>
                                            <p class="h2 no-margin fw-normal">Sin Garantía</p>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-xs-6">
                                            <h6 class="no-margin">Síntoma</h6>
                                            <p class="value5">@Model.sintoma</p>
                                        </div>
                                        <div class="col-xs-6">
                                            <h6 class="no-margin">Requerimiento</h6>
                                            <p class="value5">@Model.requerimientocliente</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </section>
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <i class="fa fa-info-circle"></i>  Antecedentes
                        </div>
                        <div class="panel-body">
                            <div class="col-md-12 text-center">
                                <div class="m-b-sm">

                                    <a id="lknAntecedentes" data-url="@Url.Action("Antecedentes", "Incidencia")" href="javascript:Antecedentes(@Model.idincidencia);" class="btn  btn-block btn-primary"><strong> Ver Antecedentes </strong><i class="fa fa-long-arrow-right"></i> </a>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="ibox float-e-margins">
                    <div class="ibox-title">
                        <h5><i class="fa fa-info-circle"></i> Propuesta Solución</h5>
                        <div class="ibox-tools">
                            <a class="collapse-link">
                                <i class="fa fa-chevron-up"></i>
                            </a>
                        </div>
                    </div>
                    <div class="ibox-content">
                        <div class="panel panel-primary">
                            <div class="panel-body">
                                <div class="col-md-12">
                                    <div class=" alert alert-info">
                                        <p> <i class="fa fa-info-circle"></i> Solo se genera Pre-Notas de crédito, para las propuestas : Cambios mano a mano y Notas de crédito por CDM ó DEF.</p>
                                        <p> <i class="fa fa-info-circle"></i> Tener en cuenta que las ODS solo se podrán generar desde una tienda con servicio técnico o de provincia.</p>
                                        @*<p> <i class="fa fa-info-circle"></i> Al generar una ODS, el sistema creará una guia de ingreso al almacén de devolución de la tienda.</p>*@
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <table id="tblPropuestas" data-url="@Url.Action("listarPropuestasIncidencia", "Incidencia")" width="100%" data-urlsol="@Url.Action("SolicitarAutorizacion", "Incidencia")" data-urlncr="@Url.Action("GenerarPreNotaCredito", "Incidencia")" data-urlods="@Url.Action("RegistroODS", "Incidencia")" class="table table-striped table-bordered table-hover dataTables-Propuestas">
                                        <tfoot>
                                            <tr>
                                                <th>ID</th>
                                                <th>Propuesta</th>
                                                <th>Observación</th>
                                                <th>Estado</th>
                                                <th>Pre-Nota de Crédito</th>
                                                <th>Generar ODS</th>
                                                <th>Solicitud</th>
                                            </tr>
                                        </tfoot>
                                    </table>
                                    <button id="btnActualizarPropuestas" type="button" class="btn btn-primary btn-outline btn-sm" data-toggle="tooltip" data-placement="center" title="" data-original-title="Actualizar tabla"><i class="fa fa-refresh fa-spin"></i> Refresh</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="ibox float-e-margins">
                    <div class="ibox-title">
                        <h5><i class="fa fa-table"></i> Documentos Internos (ODS)</h5>
                        <div class="ibox-tools">
                            <a class="collapse-link">
                                <i class="fa fa-chevron-up"></i>
                            </a>
                        </div>
                    </div>
                    <div class="ibox-content">
                        <div class="panel panel-warning">
                            <div class="panel-body">
                                <div class="col-md-12">
                                    <div class=" alert alert-info">
                                        <p> <i class="fa fa-info-circle"></i> Aquí se listan todas las Ordenes de servicio generadas.</p>
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <table id="tblDocumentosInternos" data-url="@Url.Action("listarDocumentosInternos", "Incidencia")" w width="100%" data-urlver="@Url.Action("VerDocumentoInterno", "Incidencia")" class="table table-striped table-bordered table-hover dataTables-tblDocumentosInternos">
                                        <tfoot>
                                            <tr>
                                                <th>ID</th>
                                                <th>Tipo Documento</th>
                                                <th>N° Documento</th>
                                                <th>Fecha Creación</th>
                                                <th>Estado</th>
                                                <th>N° Guia Ingreso</th>
                                                <th>N° Guia Salida</th>
                                                <th>Acciones</th>
                                            </tr>
                                        </tfoot>
                                    </table>
                                    <button id="btnActualizarDocumentosInternos" type="button" class="btn btn-primary btn-outline btn-sm" data-toggle="tooltip" data-placement="center" title="" data-original-title="Actualizar tabla"><i class="fa fa-refresh fa-spin"></i> Refresh</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="ibox float-e-margins">
                    <div class="ibox-title">
                        <h5><i class="fa fa-envelope"></i> Solicitudes Enviadas</h5>
                        <div class="ibox-tools">
                            <a class="collapse-link">
                                <i class="fa fa-chevron-up"></i>
                            </a>
                        </div>
                    </div>
                    <div class="ibox-content">
                        <table id="tblSolicitudes" data-url="@Url.Action("listarSolicitudesIncidencia", "Incidencia")" width="100%" class="table table-striped table-bordered table-hover dataTables-Solicitudes">
                            <tfoot>
                                <tr>
                                    <th>Id Solicitud</th>
                                    <th>Motivo</th>
                                    <th>Observación</th>
                                    <th>Para</th>
                                    <th>Fecha Envío</th>
                                    <th>Fecha Respuesta</th>
                                    <th>Estado</th>
                                    <th>Motivo</th>
                                    <th>Observación</th>
                                </tr>
                            </tfoot>
                        </table>
                        <button id="btnActualizarSolicitudes" type="button" class="btn btn-primary btn-outline btn-sm" data-toggle="tooltip" data-placement="center" title="" data-original-title="Actualizar tabla"><i class="fa fa-refresh fa-spin"></i> Refresh</button>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

@if (TempData["mensaje"] != null)
{
    @Html.Hidden("hdfMensaje", @TempData["mensaje"])
}
