@model Web.Smartway.Areas.Despacho.Models.ProgramacionModel
@section Styles {
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/plugins/jqGrid/ui.jqgrid.css")" />
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/jqgrid.extension.css")" />

}
@using (Ajax.BeginForm("GenerarGuiaRemision", "Guias", null, new AjaxOptions { HttpMethod = "POST", InsertionMode = InsertionMode.Replace, UpdateTargetId = "modalcontent", OnComplete = "OnCompleteTransaction(xhr, status)" }, new { @class = "form-horizontal" }))
{
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4 class="modal-title">Agregar cabecera de Guía</h4>
        <small class="font-bold">Ingresar todos los datos requeridos</small>
    </div>
    <div class="modal-body">
        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <div class="col-md-5">
                        <label class="control-label">Número de Guía de Remisión:</label>
                        @Html.TextBoxFor(x => x.numeroguia, new { @class = "form-control", @required = "true" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-5">
                        <label class="control-label">Origen:</label>
                        @Html.TextBoxFor(x => x.direccionorigen, new { @class = "form-control", @required = "true" })
                    </div>
                    <div class="col-md-5">
                        <label class="control-label">Destino:</label>
                        @Html.TextBoxFor(x => x.direcciondestino, new { @class = "form-control", @required = "true" })
                    </div>

                </div>
                <div class="form-group">
                    <div class="col-md-5">
                        <label class="control-label">Destinatario:</label>
                        @Html.DropDownListFor(model => model.iddestinatario, (SelectList)ViewData["ListadoClientes"], "-- Seleccionar --", new { @class = "chosen-select form-control", @required = "true" })

                    </div>
                    <div class="col-md-5">
                        <label class="control-label">Transportista:</label>
                        @Html.DropDownListFor(model => model.idtransportista, (SelectList)ViewData["listadotransportista"], "-- Seleccionar --", new { @class = "chosen-select form-control", @required = "true" })

                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-5">
                        <label class="control-label">F. de Emisión:</label>
                        <div id="data_3">
                            <div class="input-group date" id='dtpFechEmision'>
                                <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
                                @Html.TextBoxFor(model => model.fechaemision, "{0:dd/MM/yyyy}", new { @class = "form-control" })
                            </div>
                        </div>
                    </div>
                    @*<div class="col-md-5">
                        <label class="control-label">Nro Despacho:</label>
                        @Html.TextBoxFor(x => x.numeroordensalida, new { @class = "form-control"})
                    </div>*@
                </div>  
                </div>


            </div>
    </div>
    <div class="modal-footer">
        <div class="col-md-3">
            <button type="submit" class="btn btn-block btn-primary btn-sm"><i class="fa fa-bus"></i> Generar </button>  
        </div>
    </div>

}
