@model Web.Smartway.Areas.Agendamiento.Models.GuiaRemisionDetalleModel
@section Styles {
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/plugins/jqGrid/ui.jqgrid.css")" />
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/jqgrid.extension.css")" />

}
@using (Ajax.BeginForm("InsertarActualizarGuiaRemision", "Guias", null, new AjaxOptions { HttpMethod = "POST", InsertionMode = InsertionMode.Replace, UpdateTargetId = "modalcontent", OnComplete = "OnCompleteTransaction(xhr, status)" }, new { @class = "form-horizontal" }))
{
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4 class="modal-title">Detalle de guía</h4>
        <small class="font-bold">Ingresar detalle de la guía</small>
    </div>
    <div class="modal-body">
        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <div class="col-md-5">
                        <label class="control-label">Nro Despacho:</label>
                        @Html.TextBoxFor(x => x.numeroordensalida, new { @class = "form-control" })
                    </div>
                    <div class="col-md-5">
                        <label class="control-label">Código (N° OST):</label>
                        @Html.TextBoxFor(x => x.codigo, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-10">
                        <label class="control-label">Descripción:</label>
                        @Html.TextAreaFor(x => x.descripcion, new {
                       TextMode = "MultiLine",
                       Columns = "50",
                       Rows = "5",
                       @class = "form-control" })
                    </div>


                </div>
                <div class="form-group">
                    <div class="col-md-5">
                        <label class="control-label">Cantidad:</label>
                        @Html.TextBoxFor(x => x.cantidad, new { @class = "form-control" })
                        
                    </div>
                </div>


            </div>

        </div>
    </div>
    <div class="modal-footer">
        <div class="col-md-3">
            <button type="submit" class="btn btn-block btn-primary btn-sm"><i class="fa fa-bus"></i> Guardar </button>
        </div>
    </div>
    @Html.HiddenFor(x=>x.idguiaremision)
    @Html.HiddenFor(x=>x.idordenservicio)
}
