
@{
    ViewBag.Title = "Pantalla";
}

@{
    var listItems =
        new List<System.Web.UI.WebControls.ListItem>
        { new System.Web.UI.WebControls.ListItem { Text = "Sist1", Value = "sistema1" }
        , new System.Web.UI.WebControls.ListItem { Text = "Sist2", Value = "sistema2" }
        , new System.Web.UI.WebControls.ListItem { Text = "Sist3", Value = "sistema3" }};
}

@section scripts {
    <script src="@Url.Content("~/Scripts/jqgrid/jquery.jqGrid.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jqgrid/i18n/grid.locale-es.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jsview/seguridad.pantalla.js")" type="text/javascript"></script>
}


<h2>Pantalla</h2>
<br />
Filtros:
<br />
<table>
    <tr>
         <td>@Html.TextBox("txtNombrePantalla", "")</td>
        <td>@Html.CheckBox("txtActivo", true)</td>
        <td>@Html.DropDownList("ddlPantalla", new SelectList(listItems))</td>
        <td><button id='newProduct3' onclick="location.href='@Url.Action("Buscar", "Pantalla")'" class="btn btn-primary">Buscar</button></td>
    </tr>
</table>
<br />
<fieldset>
    <button id='newProduct3' onclick="location.href='@Url.Action("NuevaPantalla", "Seguridad")'" class="btn btn-primary">Nuevo</button>
</fieldset>

