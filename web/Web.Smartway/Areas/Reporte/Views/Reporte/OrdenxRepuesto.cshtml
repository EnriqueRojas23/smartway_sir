@model Web.Smartway.Areas.Reporte.Models.ReporteModel
@{
    ViewBag.Title = "Orden por Repuesto";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Styles
{
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/plugins/jqGrid/ui.jqgrid.css")" />
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/jqgrid.extension.css")" />
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/plugins/datapicker/datepicker3.css")" />
}

@section scripts
{
    <script src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/app/Reportes/reporte.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/plugins/datapicker/bootstrap-datepicker.js")" type="text/javascript"></script>
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Reporte Orden por Repuesto</h2>
    </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">


    <div class="row ">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5><i class="fa fa-info-circle"></i>  Filtro de búsqueda</h5>
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                    </div>
                </div>
                <div class="ibox-content">
                    <div class="form-horizontal">

                        <div class="form-group">
                            <label class="col-md-2 control-label"> Fechas :</label>
                            <div class="col-md-2">
                                <div class="input-group date" id='dtpfechaini'>
                                    <div class="input-group date">
                                        <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
                                        @Html.TextBoxFor(model => model.fecinicio, "{0:dd/MM/yyyy}", new { @placeholder = "Desde", @class = "form-control", @required = "False" })
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-2">
                                <div class="input-group date" id='dtpfechafin'>
                                    <div class="input-group date">
                                        <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
                                        @Html.TextBoxFor(model => model.fecfin, "{0:dd/MM/yyyy}", new { @placeholder = "Hasta", @class = "form-control", @required = "False" })
                                    </div>
                                </div>
                            </div>
                           
                        </div>
                        <div class="form-group">

                        </div>

                        <div class="form-group">
                            <div class="col-md-2">
                                <button type="button" id='btnBuscarOrdenxRepuesto' class="btn  btn-line btn-block btn-sm btn-primary"><i class="fa fa-search"></i> Ver Reporte </button>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>


</div>