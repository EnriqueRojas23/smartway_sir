@model Web.Smartway.Areas.Mantenimiento.Models.PartnerModel

@using (Ajax.BeginForm("AgregarPartnerModal", "Mantenimiento", null, new AjaxOptions { HttpMethod = "POST", InsertionMode = InsertionMode.Replace, UpdateTargetId = "modalcontent", OnComplete = "OnCompleteTransaction(xhr, status)" }, new { @class = "form-horizontal" , id="frmAgregarSucursal" }))
{
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        @*<i class="fa fa-users fa-4x"></i>*@
        <h4 class="modal-title">Agregar Partner</h4>
        <small class="font-bold">Digitar los datos obligatorios para el registro.</small>
    </div>
    <div class="modal-body">
        <div class="row">
            
            <div class="col-md-12">
                <div class="form-group">
                    <div class="col-md-12">
                        <label class="control-label">Tipo Partner :</label>
                        @Html.DropDownListFor(model => model.idtipopartner, (SelectList)ViewData["listatipopartner"], "[Seleccionar]", new { @class = "form-control", @required = "true" })
                    </div>

                </div>

                    <div class="form-group">
                        <div class="col-md-12">
                            <label class="control-label">Razón Social:</label>
                            @Html.TextBoxFor(model => model.razonsocial, new { @maxlength = "50", @class = "form-control", @required = "true" })
                        </div>
                      


                    </div>
                    <div class="form-group">
                        <div class="col-md-6">
                            <label class="control-label">Nombre Corto :</label>
                            @Html.TextBoxFor(model => model.nombrecorto, new { @maxlength = "10", @class = "form-control", @required = "true" })
                        </div>
                        <div class="col-md-6">
                            <label class="control-label">RUC:</label>
                            @Html.TextBoxFor(model => model.numerodocumento, new { @maxlength = "11", @class = "form-control", @required = "true" })
                        </div>
                      
                    </div>
                <div class="form-group">
                    <div class="col-md-12">
                        <label class="control-label">Ubigeo:</label>
                        @Html.DropDownListFor(model => model.iddistrito, (SelectList)ViewData["listaubigeos"], "[Seleccionar]", new { @id = "ddlUbigeo", @class = "chosen-select form-control" })

                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-12">
                        <label class="control-label">Dirección :</label>
                        @Html.TextBoxFor(model => model.direccion, new { @placeholder = "Dirección Principal", @maxlength = "100", @class = "form-control", @required = "true" })

                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-6">
                        <label class="control-label">Persona Contacto :</label>
                        @Html.TextBoxFor(model => model.contacto, new { @placeholder = "Persona Contacto", @maxlength = "50", @class = "form-control", @required = "true" })
                    </div>
                    <div class="col-md-6">
                        <label class="control-label">Email:</label>
                        @Html.TextBoxFor(model => model.email, new { @type = "email", @class = "form-control", @required = "true" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-6">
                        <label class="control-label">Teléfono:</label>
                        @Html.TextBoxFor(model => model.telefono, new { @placeholder = "Teléfono", @maxlength = "10", @class = "form-control", @required = "true" })
                    </div>
                    <div class="col-md-6">
                        <label class="control-label">Celular:</label>
                        @Html.TextBoxFor(model => model.celular, new { @placeholder = "Teléfono", @maxlength = "10", @class = "form-control", @required = "true" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-6">
                        <label class="control-label">Condición Recojo:</label>
                        @Html.DropDownListFor(model => model.idcondicionrecojo, (SelectList)ViewData["listacondicionrecojo"], "[Seleccionar]", new { @class = "form-control" })
                    </div>
                    <div class="col-md-6">
                        <label class="control-label">Condición de Entrega:</label>
                        @Html.DropDownListFor(model => model.idcondicionentrega, (SelectList)ViewData["listacondicionentrega"], "[Seleccionar]", new { @class = "form-control" })
                    </div>
                </div>
              
                   
                 
                    <div class="form-group">
                        <div class="col-md-6">
                            <label class="control-label">Condición Pago:</label>
                            @Html.DropDownListFor(model => model.idcondicionpago, (SelectList)ViewData["listatipopago"], "[Seleccionar]", new { @class = "form-control" })
                        </div>
                        <div class="col-md-6">
                            <label class="control-label">Moneda:</label>
                            @Html.DropDownListFor(model => model.idmoneda, (SelectList)ViewData["listamoneda"], "[Seleccionar]", new { @class = "form-control" })
                        </div>
                    </div>
                   
                    <div class="form-group">
                        <div class="col-md-6">
                            <label class="control-label">Línea Crédito:</label>
                            @Html.TextBoxFor(model => model.lineacredito, new { @placeholder = "Linea Crédito", @maxlength = "10", @class = "form-control", @required = "true" })
                        </div>
                        <div class="col-md-6">
                            <label class="control-label">Línea Utilizada:</label>
                            @Html.TextBoxFor(model => model.lineaconsumida, new { @disabled = "False" , @placeholder = "Linea Utilizada", @maxlength = "10", @class = "form-control", @required = "true" })
                        </div>
                    </div>
                </div>
          </div>
     </div>
    <div class="modal-footer">
                    <div class="col-lg-offset-6 col-md-6">
                        <button type="submit" class="btn btn-primary"><i class="fa fa-check-circle-o"></i> Guardar</button>
                        <button type="button" onclick="" class="btn  btn-inverse" data-dismiss="modal"><i class="fa fa-times-circle-o"></i>  Cancelar</button>
                    </div>
            </div>
          
}