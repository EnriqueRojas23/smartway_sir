@model Web.Smartway.Areas.Inventario.Models.AlmacenModel

@using (Ajax.BeginForm("AgregarAlmacenModal", "Mantenimiento", null, new AjaxOptions { HttpMethod = "POST", InsertionMode = InsertionMode.Replace, UpdateTargetId = "modalcontent", OnComplete = "OnCompleteTransaction(xhr, status)" }, new { @id = "frmEditarAlmacen", @class = "form-horizontal" }))
{
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        @*<i class="fa fa-users fa-4x"></i>*@
        <h4 class="modal-title">Editar almacén</h4>
        <small class="font-bold">Digitar los datos necesarios para editar el almacén.</small>
    </div>
    <div class="modal-body">
        <div class="row">
            
            <div class="col-md-12">

                <div class="form-group">
                    <div class="col-md-6">
                      <label class="control-label">Sucursal:</label>
                       @Html.DropDownListFor(m => m.idsucursal, (SelectList)ViewData["listasucursal"], "[Sucursal]", new { @class = "form-control", @required = "true" })
                    </div>
                    <div class="col-md-6">
                        <label class="control-label">Código almacén :</label>
                        @Html.TextBoxFor(model => model.codigoalmacen, new { @maxlength = "10", @class = "form-control", @required = "true" })
                    </div>


                </div>
                <div class="form-group">
                    <div class="col-md-12">
                        <label class="control-label">Nombre  almacén:</label>
                        @Html.TextBoxFor(model => model.nombrealmacen, new { @maxlength = "50", @class = "form-control", @required = "true" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-12">
                        <label class="control-label">Tipo almacén :</label>
                        @Html.DropDownListFor(model => model.idtipoalmacen, (SelectList)ViewData["listatipoalmacen"], "[Tipo almacén]", new { @id = "ddlUbigeo", @class = "chosen-select form-control", @data_url = @Url.Action("JsonGetDatosDireccion", "Mantenimiento"), @required = "true" })
                    </div>

                </div>
              
            </div>


                
          </div>
           
     </div>
           <div class="modal-footer">
                    <div class="col-lg-offset-6 col-md-6">
                        <button type="submit" class="btn btn-primary"><i class="fa fa-check-circle-o"></i> Guardar</button>
                        <button type="button" onclick="" class="btn  btn-inverse" data-dismiss="modal"><i class="fa fa-times-circle-o"></i>  Cancelar</button>
                    </div>
            </div>
         @Html.HiddenFor(x=>x.idalmacen)
          
}