@model Web.Smartway.Areas.Mantenimiento.Models.FallaModel
@{
    ViewBag.Title = "Falla";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles
{
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/plugins/jqGrid/ui.jqgrid.css")" />
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/jqgrid.extension.css")" />
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/plugins/sweetalert/sweetalert.css")" />
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/plugins/chosen/chosen.css")" />
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/application.css")" />
}
@section scripts
    {
    <script src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/app/Mantenimiento/mantenimiento.falla.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/plugins/jqGrid/jquery.jqGrid.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/plugins/jqGrid/i18n/grid.locale-es.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/plugins/chosen/chosen.jquery.js")" type="text/javascript"></script>
}


<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Mantenimiento de Fallas</h2>
    </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5><i class="fa fa-info-circle"></i>  Filtro de búsqueda</h5>
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                    </div>
                </div>
                <div class="ibox-content">
                    <div class="form-horizontal">
                            <div class="form-group">
                                <label class="col-md-2 control-label">Categoría Falla:</label>
                                <div class="col-md-4">
                                    @Html.DropDownListFor(m => m.idcategoriafalla, (SelectList)ViewData["listacategoriafalla"], "[--]", new { @class = "chosen-select form-control input-sm", @required = "true" })
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-2 control-label">Fabricante  :</label>
                                <div class="col-md-4">
                                    @Html.DropDownListFor(m => m.idfabricante, (SelectList)ViewData["listapartner"], "[--]", new { @class = "chosen-select form-control input-sm", @required = "true" })
                                </div>
                                <div class="col-md-2">
                                    <button type="button" id='btnBuscar' class="btn  btn-line btn-block btn-sm btn-primary"><i class="fa fa-search"></i> Buscar </button>
                                </div>
                            </div>

                        </div>
                </div>

            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5><i class="fa fa-info-circle"></i>  Listado de Fallas</h5>
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                    </div>
                </div>
                <div class="ibox-content">
                    <div class="form-horizontal">
                        <div class="form-group">
                            <div class="col-md-12">
                                <div class="col-md-2">
                                    <button type="button" id='addrow' class="btn  btn-line btn-block btn-sm btn-primary"><i class="fa fa-pencil"></i> Nuevo </button>
                                </div>
                            </div>
                            <div class="col-md-12">
                            </div>
                            <div class="col-md-12 jqGrid_wrapper">
                                <table id="gridfalla"
                                       data-dataurl="@Url.Action("JsonGetListarFalla", "Mantenimiento")"
                                       data-editurl="@Url.Action("gridSaveFalla", "Mantenimiento")"></table>
                                <div id="gridfallapager"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>