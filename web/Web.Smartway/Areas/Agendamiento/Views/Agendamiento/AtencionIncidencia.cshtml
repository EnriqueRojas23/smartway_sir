@model Web.Smartway.Areas.Agendamiento.Models.IncidenciaModel

@{
    ViewBag.Title = "Atención Incidencia";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Styles
{
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/plugins/sweetalert/sweetalert.css")" />
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/plugins/ladda/ladda-themeless.min.css")" />
    <link rel="stylesheet" type="text/css" media="screen" href="@Url.Content("~/Content/plugins/awesome-bootstrap-checkbox/awesome-bootstrap-checkbox.css")" />
    <link rel="stylesheet" type="text/css" media="screen" href="@Url.Content("~/Content/plugins/touchspin/jquery.bootstrap-touchspin.min.css")" />
}

@section scripts
{
    <script src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/app/Agendamiento/agendamiento.index.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/plugins/sweetalert/sweetalert.min.js")" type="text/javascript"></script>
  
}
<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Sistema SIR</h2>
        <ol class="breadcrumb"></ol>
    </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">

    <div class="row">
        <div class="col-md-5 col-md-offset-2">
                    <br /><br /><br /><br /><br />
                    <div class="ibox float-e-margins">
                        <div class="ibox-title">
                            <h5><i class="fa fa-info-circle"></i>  Nueva Incidenia</h5>
                            <div class="ibox-tools">
                                <a class="collapse-link">
                                    <i class="fa fa-chevron-up"></i>
                                </a>
                            </div>
                        </div>
                        <div class="ibox-content">
                                <form id="FrmNuevaIncidencia" method="post" action="@Url.Action("RegistroNuevaIncidencia", "Agendamiento")" class="form-group">
                                    <div class="form-horizontal">
                                        <div class="form-group">
                                            <div class="col-md-11">
                                                <label class="control-label">Tipo de Incidencia</label>
                                                @Html.DropDownListFor(m => m.idtipoincidencia, (SelectList)ViewData["listatipoincidencia"], "[--]", new { @class = "form-control", @required = "true" })
                                            </div>
                                            <div class="col-md-11">
                                                <label class="control-label">Tipo Solución</label>
                                                @Html.DropDownListFor(m => m.idtiposolucion, (SelectList)ViewData["listatiposolucion"], "[--]", new { @class = "form-control", @required = "true" })
                                            </div>
                                            <div class="col-md-12">
                                                <div class="col-md-7 col-md-offset-5">
                                                    <label class="checkbox-inline i-checks"> @Html.CheckBoxFor(model => model.engarantia) Con documento de compra</label>
                                                </div>
                                            </div>
                                                <div class="col-md-2">
                                                    <button type="submit" id="btnNuevaIncidencia" class="btn ladda-button btn-line btn-primary" data-style="expand-right"> Iniciar </button>
                                                </div>
                                        </div>
                                    </div>
                                </form>
                         </div>
                </div>
        </div>
        <div class="col-md-4">
            <br /><br /><br /><br /><br />
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5><i class="fa fa-info-circle"></i>  Leyenda</h5>
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                    </div>
                </div>
                <div class="ibox-content">
                          <div class="form-group">
                              <div class="alert alert-info no-margins">
                                  <p>
                                      Tipo de Incidencia:
                                      <ul>
                                          <li><strong>Reclamo</strong> Referido a un producto  </li>
                                          <li><strong>Queja</strong> Referido a la atención.</li>
                                          <li>  En ambos casos se registra la evaluación.</li>
                                      </ul>
                                  </p>
                                  <p>
                                      Tipo de Solución:
                                      <ul>
                                          <li><strong>Manejo Interno</strong> Para registro de Incidencia </li>
                                          <li><strong>Libro de Reclamaciones</strong> Formalización de queja.</li>
                                          <li>  La elección de libro de reclamaciones aperturará el registro de la misma dentro de la incidencia.</li>
                                      </ul>
                                  </p>
                              </div>
                           
                   </div>
                </div>
            </div>

        </div>
    </div>
</div>